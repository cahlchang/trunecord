# AWS Configuration
aws_region   = "ap-northeast-1"
aws_profile  = "your-aws-profile"
environment  = "prod"
project_name = "trunecord"

# Discord OAuth Configuration
discord_client_id     = "YOUR_DISCORD_CLIENT_ID"
discord_client_secret = "YOUR_DISCORD_CLIENT_SECRET"
discord_bot_token     = "YOUR_DISCORD_BOT_TOKEN"

# Frontend URL (where your Electron app runs)
frontend_url = "http://localhost:3000"

# JWT Secret for token signing
jwt_secret = "YOUR_SECURE_JWT_SECRET_KEY"

# Optional: set to "false" only when the bot token is supplied to clients through another secure mechanism
# enable_bot_token_endpoint = "true"

# Version management (override as needed)
# go_client_latest_version  = "1.3.4"
