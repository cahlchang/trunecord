{
  "name": "trunecord-extension",
  "version": "1.0.0",
  "description": "Chrome extension for trunecord - Stream YouTube Music to Discord",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.237",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.0.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  }
}
